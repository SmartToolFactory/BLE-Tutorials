<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ThemeCentral" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryCentral</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCentral</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ThemePeripheral" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPeripheral</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPeripheral</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
